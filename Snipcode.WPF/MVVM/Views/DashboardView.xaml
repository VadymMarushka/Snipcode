<UserControl Style="{DynamicResource PageTransitionStyle}"
             x:Class="Snipcode.WPF.MVVM.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Snipcode.WPF.MVVM.Views"
             xmlns:converters="clr-namespace:Snipcode.WPF.Converters"
             xmlns:entities="clr-namespace:Snipcode.Core.Entities;assembly=Snipcode.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <UserControl.Resources>
        <converters:TechnologyToIconConverter x:Key="IconConverter"/>
        <converters:CategoryToStringConverter x:Key="CategoryConverter"/>
        <converters:TagsToStringConverter x:Key="TagsConverter"/>
        </UserControl.Resources>
    <Grid Margin="20,5,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*"/>
            <ColumnDefinition Width="0.65*"/>
        </Grid.ColumnDefinitions>
        <ui:Card HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" Margin="2.5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height ="auto"/>
                    <RowDefinition Height ="*"/>
                    <RowDefinition Height ="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="0,0,0,8">
                    <ui:TextBlock Text="Open recent" FontSize="18"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                            <ui:AutoSuggestBox PlaceholderText="Search snippets..."
                    Margin="0,8,0,0"
                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <ui:Button Appearance="Primary" Content="Add New" Margin="8,8,0,0" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
                <ui:Card Grid.Row="1" 
                     VerticalAlignment="Stretch"
                     VerticalContentAlignment="Stretch">

                    <ui:ListView ItemsSource="{Binding RecentSnippets}" 
                        Background="Transparent" 
                        BorderThickness="0" Margin="-10">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type entities:Snippet}">
                                <ui:Card Padding="5" Margin="-5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <ui:Card Grid.Column="0" 
                                            Width="40" Height="40"
                                            Margin="0,0,12,0">
                                            <Image Source="{Binding Technology, Converter={StaticResource IconConverter}}"
                                                Stretch="Uniform" Margin="-10" RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </ui:Card>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <ui:TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="{Binding Title}" FontSize="14"/>
                                                <ui:TextBlock Text=" " FontSize="14"/>
                                                <ui:TextBlock Foreground="{DynamicResource AccentTextFillColorTertiaryBrush}" Text="{Binding Category, Converter={StaticResource CategoryConverter}}" FontSize="14"/>
                                            </StackPanel>
                                            <ui:TextBlock Grid.Row="1" FontSize="12" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="{Binding Tags,Converter={StaticResource TagsConverter}}"/>
                                        </Grid>
                                    </Grid>
                                </ui:Card>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </ui:Card>
                <ui:Card Margin="0,8,0,0" Grid.Row="2">
                    <StackPanel>
                        <ui:TextBlock Text="Haven't found needed snippet?" HorizontalAlignment="Center" FontSize="14"/>
                        <ui:Button Appearance="Primary" Content="Search for more" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </ui:Card>
            </Grid>
        </ui:Card>
        <ui:Card HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2.5" Grid.Column="1">

        </ui:Card>
    </Grid>
</UserControl>
