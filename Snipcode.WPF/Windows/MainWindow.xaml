<ui:FluentWindow
    x:Class="Snipcode.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Snipcode.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:views="clr-namespace:Snipcode.WPF.MVVM.Views"
    Title="Snipcode"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    d:Background="#202020"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ui:TitleBar
            Title="{Binding Title}"
            Grid.Row="0"
            FontSize="24" />

        <ui:NavigationView Grid.Row="1" x:Name="RootNavigation"
                   PaneDisplayMode="Top">

            <ui:NavigationView.MenuItems>

                <ui:NavigationViewItem Content="Home"
                           x:Name="HomeItem"
                           Icon="{ui:SymbolIcon Home24}" 
                           Tag="dashboard"
                           TargetPageType="{x:Type views:DashboardView}" />

                <ui:NavigationViewItem Content="Tags &amp; Categories" 
                           Icon="{ui:SymbolIcon Tag24}" 
                           IsEnabled="False"/>

                <ui:NavigationViewItem Content="Settings" 
                           x:Name="SettingsItem"
                           Icon="{ui:SymbolIcon Settings24}" 
                           Tag="settings"
                           TargetPageType="{x:Type views:SettingsView}" />

                <ui:NavigationViewItem Content="Help" 
                           Icon="{ui:SymbolIcon QuestionCircle24}" />

            </ui:NavigationView.MenuItems>

        </ui:NavigationView>
        
    </Grid>
</ui:FluentWindow>